<h1>Create a new question</h1>
<ul>
  <%= form_for @question,:html => { :multipart => true } do |f| %>
    <li>
      <%= f.file_field :image, accept: 'image/*', capture: 'camera' %><br><br>
      <%= f.label :council_id %>
      <%= f.text_field :council_id %><br><br>
      <%= f.label :content %>
      <%= f.text_field :content %>
    </li>
    <li>
      <%= f.submit %>
    </li>
  <% end %>
</ul>